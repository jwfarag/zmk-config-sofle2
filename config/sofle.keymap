#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

#define BASE 0
#define LOWER 1
#define RAISE 2
#define ADJUST 3

/ {
    // Activate ADJUST layer by pressing raise and lower

    conditional_layers {
        compatible = "zmk,conditional-layers";

        adjust_layer {
            if-layers = <LOWER RAISE>;
            then-layer = <ADJUST>;
        };
    };

    combos {
        compatible = "zmk,combos";

        backspace {
            bindings = <&kp BACKSPACE>;
            key-positions = <32 31>;
        };

        RightBracket {
            bindings = <&kp RBKT>;
            key-positions = <10 11>;
        };

        LeftBracket {
            bindings = <&kp LBKT>;
            key-positions = <9 8>;
        };

        Pluus {
            bindings = <&kp EQUAL>;
            key-positions = <22 23>;
        };

        other_bs {
            bindings = <&kp BACKSPACE>;
            key-positions = <30 31>;
        };

        Shifty {
            bindings = <&kp RIGHT_SHIFT>;
            key-positions = <54 55>;
        };
    };

    behaviors {
        caps: caps {
            compatible = "zmk,behavior-caps-word";
            label = "CAPS";
            #binding-cells = <0>;
            continue-list = <POUND MINUS BACKSPACE UNDERSCORE>;
        };

        hold_tap: hold_tap {
            compatible = "zmk,behavior-hold-tap";
            label = "HOLD_TAP";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <150>;
            flavor = "tap-preferred";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "default";

            // ------------------------------------------------------------------------------------------------------------
            // |   `   |  1  |  2  |  3   |  4   |  5   |                   |  6   |  7    |  8    |  9   |   0   |       |
            // |  ESC  |  Q  |  W  |  E   |  R   |  T   |                   |  Y   |  U    |  I    |  O   |   P   | BKSPC |
            // |  TAB  |  A  |  S  |  D   |  F   |  G   |                   |  H   |  J    |  K    |  L   |   ;   |   '   |
            // | SHIFT |  Z  |  X  |  C   |  V   |  B   |  MUTE  |  |       |  N   |  M    |  ,    |  .   |   /   | SHIFT |
            //               | GUI | ALT  | CTRL | LOWER|  ENTER |  | SPACE | RAISE| CTRL  | ALT   | GUI  |

            bindings = <
&kp GRAVE       &kp N1  &kp N2        &kp N3    &kp N4            &kp N5                                                     &kp N6     &kp N7     &kp N8     &kp N9     &kp N0    &kp BACKSPACE
&kp TAB         &kp Q   &kp W         &kp E     &kp R             &kp T                                                      &kp Y      &kp U      &kp I      &kp O      &kp P     &kp BSLH
&kp CAPSLOCK    &kp A   &kp S         &kp D     &kp F             &kp G                                                      &kp H      &kp J      &kp K      &kp L      &kp SEMI  &kp SQT
&kp LEFT_SHIFT  &kp Z   &kp X         &kp C     &kp V             &kp B      &kp C_MUTE                    &kp C_PLAY_PAUSE  &kp N      &kp M      &kp COMMA  &kp DOT    &kp FSLH  &hold_tap RIGHT_SHIFT ENTER
                        &kp LEFT_GUI  &kp LALT  &kp LEFT_CONTROL  &mo LOWER  &hold_tap LEFT_SHIFT ENTER    &kp SPACE         &mo RAISE  &lt 4 ESC  &kp MINUS  &kp EQUAL
            >;

            sensor-bindings =
                <&inc_dec_kp C_VOL_UP C_VOL_DN>,
                <&inc_dec_kp C_PREV C_NEXT>;
        };

        lower_layer {
            display-name = "lower";

            // TODO: Some binds are waiting for shifted keycode support.
            // ------------------------------------------------------------------------------------------------------------
            // |       |  F1 |  F2 |  F3  |  F4  |  F5  |                   |  F6  |  F7   |  F8   |  F9  |  F10  |  F11  |
            // |   `   |  1  |  2  |  3   |  4   |  5   |                   |  6   |  7    |  8    |  9   |   0   |  F12  |
            // |       |  !  |  @  |  #   |  $   |  %   |                   |  ^   |  &    |  *    |  (   |   )   |   |   |
            // |       |  =  |  -  |  +   |  {   |  }   |        |  |       |  [   |  ]    |  ;    |  :   |   \   |       |
            //               |     |      |      |      |        |  |       |      |       |       |      |

            bindings = <
&kp ESC  &kp F1     &kp F2         &kp F3        &kp F4                &kp F5                                   &kp F6          &kp F7        &kp F8        &kp F9        &kp F10                &kp F11
&trans   &kp N1     &kp N2         &kp N3        &kp N4                &kp N5                                   &kp NUMBER_6    &kp N7        &kp N8        &kp N9        &kp N0                 &kp F12
&trans   &kp EXCL   &kp AT         &kp HASH      &kp DLLR              &kp PRCNT                                &kp CARET       &kp NUMBER_4  &kp NUMBER_5  &kp NUMBER_6  &kp RIGHT_PARENTHESIS  &kp PIPE
&trans   &kp CARET  &kp AMPERSAND  &kp ASTERISK  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &trans    &trans  &kp UNDERSCORE  &kp NUMBER_1  &kp NUMBER_2  &kp N3        &kp PIPE               &trans
                    &trans         &trans        &trans                &trans                 &trans    &trans  &trans          &trans        &kp NUMBER_0  &trans
            >;

            sensor-bindings =
                <&inc_dec_kp LEFT_ARROW RIGHT_ARROW>,
                <&inc_dec_kp C_AC_SCROLL_DOWN C_AC_SCROLL_UP>;
        };

        raise_layer {
            display-name = "raise";

            // ------------------------------------------------------------------------------------------------------------
            // | BTCLR | BT1  | BT2  |  BT3  |  BT4  |  BT5 |                |      |      |       |      |       |       |
            // |       | INS  | PSCR | GUI   |       |      |                | PGUP |      |   ^   |      |       |       |
            // |       | ALT  | CTRL | SHIFT |       | CAPS |                | PGDN |   <- |   v   |  ->  |  DEL  | BKSPC |
            // |       | UNDO | CUT  | COPY  | PASTE |      |      |  |      |      |      |       |      |       |       |
            //                |      |       |       |      |      |  |      |      |      |       |      |

            bindings = <
&kp GRAVE       &trans      &trans            &trans              &trans              &trans                            &trans    &trans    &trans    &trans     &trans   &kp DEL
&kp TAB         &kp INS     &kp PSCRN         &kp K_CMENU         &trans              &trans                            &kp HOME  &trans    &kp UP    &trans     &kp N0   &trans
&trans          &kp LALT    &kp LCTRL         &kp LSHFT           &trans              &kp CLCK                          &kp END   &kp LEFT  &kp DOWN  &kp RIGHT  &kp DEL  &kp BSPC
&kp LEFT_SHIFT  &kp K_UNDO  &kp K_CUT         &kp LA(LEFT_SHIFT)  &kp LG(LEFT_SHIFT)  &trans    &trans          &trans  &trans    &trans    &trans    &trans     &trans   &trans
                            &kp LEFT_CONTROL  &kp LEFT_ALT        &kp LEFT_CONTROL    &trans    &kp LEFT_GUI    &trans  &trans    &trans    &trans    &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        adjust_layer {
            // ----------------------------------------------------------------------------------------------------------------------------
            // | BTCLR  |  BT1    |  BT2    |   BT3   |   BT4   |   BT5   |                  |      |      |       |      |       |       |
            // | EXTPWR | RGB_HUD | RGB_HUI | RGB_SAD | RGB_SAI | RGB_EFF |                  |      |      |       |      |       |       |
            // |        | RGB_BRD | RGB_BRI |         |         |         |                  |      |      |       |      |       |       |
            // |        |         |         |         |         |         | RGB_TOG | |      |      |      |       |      |       |       |
            //                    |         |         |         |         |         | |      |      |      |       |      |

            display-name = "adjust";
            bindings = <
&bt BT_CLR         &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4                  &none  &none  &none  &none  &none  &none
&ext_power EP_TOG  &none         &none         &none         &none         &none                         &none  &none  &none  &none  &none  &none
&none              &none         &none         &none         &none         &none                         &none  &none  &none  &none  &none  &none
&none              &none         &none         &none         &none         &caps_word    &none    &none  &none  &none  &none  &none  &none  &none
                                 &none         &none         &none         &none         &none    &none  &none  &none  &none  &none
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        layer_4 {
            bindings = <
&trans  &trans  &trans  &trans  &trans             &kp HOME                                            &trans     &trans          &trans          &trans           &trans  &trans
&trans  &trans  &trans  &trans  &kp C_AC_ZOOM_IN   &msc SCRL_UP                                        &mkp LCLK  &mkp RCLK       &mmv MOVE_UP    &trans           &trans  &trans
&trans  &trans  &trans  &trans  &kp C_AC_ZOOM_OUT  &msc SCRL_DOWN                                      &trans     &mmv MOVE_LEFT  &mmv MOVE_DOWN  &mmv MOVE_RIGHT  &trans  &trans
&trans  &trans  &trans  &trans  &trans             &kp END         &trans             &trans           &trans     &trans          &trans          &trans           &trans  &trans
                &trans  &trans  &trans             &msc SCRL_LEFT  &msc SCRL_RIGHT    &msc SCRL_RIGHT  &trans     &trans          &trans          &trans
            >;
        };
    };
};
